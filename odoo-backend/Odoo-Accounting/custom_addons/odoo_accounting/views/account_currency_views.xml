<odoo>
    <!-- 1. 액션 정의가 먼저! -->
    <record id="action_custom_account_currency" model="ir.actions.act_window">
        <field name="name">Currency</field>
        <field name="res_model">custom.account.currency</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_custom_account_currency_tree" model="ir.ui.view">
        <field name="name">custom.account.currency.tree</field>
        <field name="model">custom.account.currency</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="symbol"/>
                <field name="rate"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_account_currency_form" model="ir.ui.view">
        <field name="name">custom.account.currency.form</field>
        <field name="model">custom.account.currency</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="symbol"/>
                        <field name="rate"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_custom_account_currency" name="Currency" parent="menu_accounting_root" sequence="60" action="action_custom_account_currency"/>
</odoo>