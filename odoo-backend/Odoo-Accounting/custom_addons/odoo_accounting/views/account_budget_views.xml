<odoo>
    <!-- 1. 액션 정의가 먼저! -->
    <record id="action_custom_account_budget" model="ir.actions.act_window">
        <field name="name">Budget</field>
        <field name="res_model">custom.account.budget</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_custom_account_budget_tree" model="ir.ui.view">
        <field name="name">custom.account.budget.tree</field>
        <field name="model">custom.account.budget</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="amount"/>
                <field name="account_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_account_budget_form" model="ir.ui.view">
        <field name="name">custom.account.budget.form</field>
        <field name="model">custom.account.budget</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="amount"/>
                        <field name="account_id"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_custom_account_budget" name="Budget" parent="menu_accounting_root" sequence="50" action="action_custom_account_budget"/>
</odoo>